<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/et_countryCode"
            android:layout_width="300dp"
            android:layout_height="49dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter country code (optional)"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="#FF0707"
            android:textColorHint="#3C3B3B" />

        <TextView
            android:id="@+id/permanent_tv_weather_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_countryCode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="100dp"
            android:ellipsize="marquee"
            android:fontFamily="baskerville"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="Weather"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/et_cityName"
            android:layout_width="300dp"
            android:layout_height="49dp"
            android:layout_below="@id/permanent_tv_weather_name"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter city name..."
            android:inputType="textCapWords"
            android:minHeight="48dp"
            android:textColor="#FF0707"
            android:textColorHint="#3C3B3B" />

        <Button
            android:id="@+id/bt_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_cityName"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@android:color/holo_green_light"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Get"
            android:textColor="@color/black"/>
    </RelativeLayout>
</ScrollView>